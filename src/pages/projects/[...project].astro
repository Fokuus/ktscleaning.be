---
/**
 * * This page generates the individual project detail pages
**/

import { getCollection } from "astro:content";
import ProjectDetailLayout from "@layouts/ProjectDetailLayout.astro";

// Generate static paths for all project pages
export async function getStaticPaths() {
	const projects = await getCollection("projects");
	return projects.map((entry) => ({
		params: { project: entry.id },
		props: { project: entry },
	}));
}

const { project } = Astro.props;
const { Content, headings } = await project.render();
---

<ProjectDetailLayout project={project} headings={headings}>
	<Content />
</ProjectDetailLayout>
