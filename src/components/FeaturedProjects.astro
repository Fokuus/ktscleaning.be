---
/**
 * * This component displays featured projects on the homepage
**/

import { getCollection } from "astro:content";
import { formatDate } from "@js/utils";
import "@styles/projects.less";

// Get all projects from the collection
let projects = [];
try {
  console.log('Attempting to load projects collection...');
  projects = await getCollection("projects");
  console.log(`Found ${projects.length} projects for featured display`);
  console.log('Project files:', projects.map(p => p.id));
} catch (error) {
  console.error('Error loading projects:', error);
}

// Sort by featured status and date, then limit to 4 items for homepage
const featuredProjects = projects
  .sort((a, b) => {
    // First sort by featured status
    if (a.data.isFeatured && !b.data.isFeatured) return -1;
    if (!a.data.isFeatured && b.data.isFeatured) return 1;
    
    // Then sort by date (newest first)
    return new Date(b.data.date).getTime() - new Date(a.data.date).getTime();
  })
  .slice(0, 4); // Limit to 4 items for homepage
---

<section id="projects" class="projects-section">
  <div class="projects-container">
    <div class="projects-header">
      <p class="cs-topper">Our Work</p>
      <h2 class="cs-title">Featured Projects</h2>
      <div class="projects-divider"></div>
    </div>

    <div class="projects-grid">
      {featuredProjects.map((project) => (
        <a href={`/projects/${project.id}`} class="project-card">
          <div class="project-image">
            <img 
              src={project.data.image} 
              alt={project.data.imageAlt} 
              width="400" 
              height="400" 
              decoding="async" 
            />
          </div>
          <div class="project-content">
            <p class="project-category">{project.data.category}</p>
            <h3 class="project-title">{project.data.title}</h3>
            <p class="project-date">{formatDate(project.data.date)}</p>
            <p class="project-description">{project.data.description}</p>
            <span class="project-link">View Project</span>
          </div>
        </a>
      ))}
    </div>
    
    <div class="projects-cta">
      <a href="/projects" class="projects-button">See all projects</a>
    </div>
  </div>
</section>

<style lang="less">
  .projects-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .cs-topper {
    font-size: 0.9rem;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--primary);
    margin-bottom: 0.5rem;
  }
  
  .cs-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--headerColor);
  }
  
  .projects-divider {
    width: 80px;
    height: 4px;
    background-color: var(--primary);
    margin: 0 auto;
  }
  
  .projects-cta {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }
  
  .projects-button {
    display: inline-block;
    padding: 0.8rem 2rem;
    background-color: var(--primary);
    color: white;
    font-weight: 600;
    border-radius: 4px;
    text-decoration: none;
    transition: background-color 0.3s ease;
    
    &:hover {
      background-color: var(--primaryDark);
    }
  }
  
  /* Dark Mode */
  body.dark-mode {
    .cs-title {
      color: var(--bodyTextColorWhite);
    }
  }
</style>
