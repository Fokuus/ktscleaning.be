<style lang="less">
  /*-- -------------------------- -->
<---            CTA             -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #cta-1294 {
        width: 100%;
        max-width: (1280/16rem);
        margin: auto;
        margin-bottom: (-90/16rem);
        border-radius: (16/16rem);
        overflow: hidden;
        /* 40px - 80px */
        padding: clamp(2.5rem, 5vw, 5rem);
        /* prevents padding and border from affecting height and width */
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        z-index: 15;
        transform: translateY(-9.375rem);

        .cs-content {
            /* set text align to left if content needs to be left aligned */
            text-align: center;
            width: 100%;
            /* changes to 100% at tablet */
            max-width: (400/16rem);
            display: flex;
            flex-direction: column;
            /* centers content horizontally, set to flex-start to left align */
            align-items: center;
            gap: (24/16rem);
        }
        .cs-title {
            width: 100%;
            margin: 0;
            color: #fff;
        }

        .cs-form {
            width: 100%;
            max-width: (725/16rem);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: (16/16rem);
            /* prevents flexbox from squishing it */
            flex: none;
        }

        .cs-input {
            font-size: (16/16rem);
            width: 100%;
            height: clamp(2.875rem, 5.5vw, 3.5rem);
            margin: 0;
            padding: 0;
            padding-left: (20/16rem);
            border: none;
            /* prevents padding from adding to width and height */
            box-sizing: border-box;
            display: block;
            &::placeholder {
                color: #767676;
            }
        }

        .cs-button-solid {
            font-size: (16/16rem);
            /* 46px - 56px */
            line-height: clamp(2.875rem, 5.5vw, 3.5rem);
            text-decoration: none;
            font-weight: 700;
            text-align: center;
            margin: 0;
            color: #fff;
            min-width: (150/16rem);
            padding: 0 (24/16rem);
            border-radius: (4/16rem);
            background-color: var(--primary);
            display: inline-block;
            position: relative;
            z-index: 1;
            /* prevents padding from adding to the width */
            box-sizing: border-box;

            &:before {
                content: "";
                position: absolute;
                height: 100%;
                width: 0%;
                background: #000;
                opacity: 1;
                top: 0;
                left: 0;
                z-index: -1;
                transition: width 0.3s;
            }

            &:hover {
                &:before {
                    width: 100%;
                }
            }
        }

        .cs-button-solid {
            background-color: #fff;
            color: var(--primary);
        }

        .cs-background {
            width: 100%;
            height: 100%;
            background-color: var(--primary);
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;

            img {
                position: absolute;
                top: 0;
                left: 0;
                height: 100%;
                width: 100%;
                object-fit: cover;
            }
        }
    }
}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
    #cta-1294 {
        .cs-container {
            padding-left: (60/16rem);
            padding-right: (60/16rem);
        }
        .cs-content {
            text-align: left;
            max-width: 100%;
            justify-content: space-between;
        }

        .cs-form {
            flex-direction: row;
        }

        .cs-input {
            width: 100%;
            max-width: (525/16rem);
        }

        .cs-submit {
            width: auto;
            min-width: (190/16rem);
            /* prevents flexbox from squishing it */
            flex: none;
        }
    }
}

/* Desktop - 1300px */
@media only screen and (min-width: 81.25rem) {
    #cta-1294 {
        margin-bottom: (0/16rem);
        .cs-content {
            flex-direction: row;
        }

        .cs-form {
            width: 60%;
        }
    }
}

/*-- -------------------------- -->
<---          Footer            -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #cs-footer-1294 {
        padding: var(--sectionPadding);
        padding-bottom: (20/16rem);
        background-color: #1a1a1a;
        position: relative;
        z-index: 10;

        .cs-container {
            width: 100%;
            margin: auto;
        }

        .cs-logo-group {
            /* takes up all the space, lets the other ul's wrap below it */
            width: 100%;
            position: relative;
        }

        .cs-logo {
            width: (197/16rem);
            height: auto;
            display: block;
            /* 20px - 24px */
            margin: 0 0 clamp(1.25rem, 2vw, 1.5rem) 0;
        }

        .cs-logo-img {
            width: 120px;
            height: auto;

            &.dark {
                display: none;
            }
        }

        .cs-text {
            color: #fff;
            margin: 0 0 (32/16rem) 0;
        }

        .cs-link {
            font-size: (14/16rem);
            line-height: 1.5em;
            text-decoration: none;
            margin: 0;
            color: #fff;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            gap: (12/16rem);
            transition: color 0.3s;

            &:hover {
                color: var(--primary);
            }
        }

        .cs-link-icon {
            // No filter needed - icons are already primary color
        }

        /* Navigation Links */
        .cs-wrapper {
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
            flex-wrap: wrap;
            column-gap: (24/16rem);
            row-gap: (36/16rem);
        }

        .cs-nav {
            width: 45%;
            max-width: (180/16rem);
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            flex-direction: column;
            gap: (16/16rem);
        }

        .cs-nav-li {
            list-style: none;
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
        }

        .cs-header {
            font-size: (16/16rem);
            line-height: 1.2em;
            margin-bottom: (8/16rem);
            color: #fff;
            position: relative;
            display: block;
        }

        .cs-nav-link {
            font-size: (14/16rem);
            text-decoration: none;
            line-height: 1.5em;
            width: auto;
            color: #fff;
            opacity: 0.8;
            position: relative;
            display: inline-block;
            transition: color 0.3s;

            &:before {
                /* underline */
                content: "";
                width: 0%;
                height: (2/16rem);
                background: currentColor;
                opacity: 1;
                position: absolute;
                display: block;
                bottom: (-2/16rem);
                left: 0;
                transition: width 0.3s;
            }

            &:hover {
                color: var(--primary);
                &:before {
                    width: 100%;
                }
            }
        }

        .cs-bottom {
            max-width: (1280/16rem);
            margin: auto;
            /* 48px - 100px */
            margin-top: clamp(3rem, 6vw, 6.25rem);
            /* 20px - 32px */
            padding: clamp(1.25rem, 3vw, 2rem) 0 0 0;
            box-sizing: border-box;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: nowrap;
            column-gap: (36/16rem);
            row-gap: (12/16rem);
        }

        .cs-copyright {
            font-size: (14/16rem);
            line-height: 1.5em;
            color: #fff;
            opacity: 0.8;

            .cs-copyright-link {
                opacity: 1;
            }
        }

        .cs-copyright-link {
            font-size: (14/16rem);
            text-decoration: none;
            line-height: 1.5em;
            color: #fff;
            opacity: 0.8;
            transition: color 0.3s;
            &:hover {
                color: var(--secondary);
            }
        }

        .cs-copyright {
            text-align: left;
            width: auto;
            margin: 0;
        }

        .cs-made-by {
            font-size: (14/16rem);
            line-height: 1.5em;
            color: #fff;
            opacity: 0.8;
            text-align: right;
            margin-left: auto;
        }

        .cs-made-by-link {
            font-size: (14/16rem);
            text-decoration: none;
            line-height: 1.5em;
            color: #fff;
            opacity: 0.8;
            transition: color 0.3s;
            &:hover {
                color: var(--secondary);
            }
        }

        .cs-floater-wrapper {
            width: 100%;
            height: 100%;
            overflow: hidden;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
        }

        .cs-floater {
            width: (506/16rem);
            height: (506/16rem);
            margin-left: (550/16rem);
            border-radius: 50%;
            border: 2px solid var(--primary);
            opacity: 0.1;
            display: none;
            position: absolute;
            left: 50%;
            top: 0;
            z-index: -1;

            &:before {
                content: "";
                width: (715/16rem);
                height: (715/16rem);
                border: 2px solid var(--primary);
                border-radius: 50%;
                opacity: 0.6;
                position: absolute;
                display: block;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

            &:after {
                content: "";
                width: (963/16rem);
                height: (963/16rem);
                border: 2px solid var(--primary);
                border-radius: 50%;
                opacity: 0.3;
                position: absolute;
                display: block;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }
        }
    }
}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
    #cs-footer-1294 {
        .cs-wrapper {
            row-gap: 0;
            flex-direction: row;
            flex-wrap: nowrap;
            column-gap: (88/16rem);
            row-gap: (40/16rem);
        }

        .cs-nav {
            width: auto;
        }

        .cs-bottom {
            flex-wrap: nowrap;
            justify-content: flex-start;
        }

        .cs-copyright {
            text-align: left;
            width: auto;
            margin-right: auto;
        }

        .cs-floater {
            display: block;
        }
    }
}

/* Small Desktop - 1024px */
@media only screen and (min-width: 64rem) {
    #cs-footer-1294 {
        .cs-container {
            max-width: (1280/16rem);
            flex-wrap: nowrap;
            /* align everything to the right */
            justify-content: flex-end;
            column-gap: clamp(2.5rem, 6vw, 5.25rem);
        }

        .cs-logo-group {
            width: 30%;
            max-width: (387/16rem);
            /* pushes away from everything to the right */
            margin-right: auto;
        }

        .cs-text {
            width: 100%;
        }

        .cs-graphic {
            display: block;
        }
    }
}



.cs-logo-img {
  width: 120px;
  height: auto;
}
@media (min-width: 768px) {
  .cs-logo-img {
    width: 240px;
  }
}
                                
