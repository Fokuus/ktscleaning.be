---
/**
 * * This component displays blog posts in a masonry layout gallery
 **/
import { formatDate } from "@js/utils";
import { Picture } from "astro:assets";

const { posts } = Astro.props;
---

<section id="gallery-2371">
    <div class="cs-container">
        <div class="cs-content wow animate__fadeInUp">
            <span class="cs-topper">Our Blog</span>
            <h2 class="cs-title">Latest Articles</h2>
            <p class="cs-text">
                Explore our latest thoughts, insights, and updates in our blog posts.
            </p>
        </div>
        <div class="cs-image-group">
            {posts.length === 0 && <h3>No Posts Available</h3>}
            {
                posts.length >= 1 &&
                posts.map((post, index) => (
                    <a href={`/blog/${post.id}`} class="cs-item wow animate__fadeInUp" data-wow-delay={`${0.2 + index * 0.1}s`}>
                        <Picture
                            src={post.data.image}
                            quality={"mid"}
                            formats={["avif", "webp", "jpg"]}
                            alt={post.data.imageAlt}
                            loading="lazy"
                            decoding="async"
                            aria-hidden="true"
                            class="cs-image"
                        />
                        <div class="cs-info">
                            <span class="cs-date">{formatDate(post.data.date)}</span>
                            <h3 class="cs-h3">{post.data.title}</h3>
                            <p class="cs-desc">{post.data.description}</p>
                            <span class="cs-link">Read More</span>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>

<style lang="less">
/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #gallery-2371 {
        padding: var(--sectionPadding);
        
        .cs-container {
            width: 100%;
            max-width: (1280/16rem);
            margin: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            /* 48px - 64px */
            gap: clamp(3rem, 6vw, 4rem);
        }

        .cs-content {
            /* centers content on mobile */
            text-align: center;
            width: 100%;
            display: flex;
            flex-direction: column;
            /* centers content on mobile */
            align-items: center;
        }

        .cs-topper {
            font-size: var(--topperFontSize);
            line-height: 1.2em;
            text-transform: uppercase;
            text-align: inherit;
            letter-spacing: .1em;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.25rem;
            display: block;
        }

        .cs-title {
            font-size: var(--headerFontSize);
            font-weight: 900;
            line-height: 1.2em;
            text-align: inherit;
            max-width: 43.75rem;
            margin: 0 0 1rem 0;
            color: var(--headerColor);
            position: relative;
        }

        .cs-text {
            font-size: var(--bodyFontSize);
            line-height: 1.5em;
            text-align: inherit;
            width: 100%;
            max-width: 40.625rem;
            margin: 0;
            color: var(--bodyTextColor);
        }

        .cs-image-group {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            gap: 1.25rem;
        }

        .cs-item {
            text-decoration: none;
            width: 100%;
            position: relative;
            display: block;
            border-radius: 0.5rem;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;

            &:hover {
                transform: translateY(-0.3125rem);
                box-shadow: 0 0.625rem 1.875rem rgba(0, 0, 0, 0.1);

                .cs-image {
                    transform: scale(1.1);
                }

                .cs-link {
                    color: var(--primary);
                }
            }
        }

        .cs-image {
            position: relative;
            width: 100%;
            height: 15rem;
            object-fit: cover;
            display: block;
            transition: transform 0.6s;
        }

        .cs-info {
            width: 100%;
            padding: 1.5rem;
            background-color: #fff;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .cs-date {
            font-size: 0.875rem;
            line-height: 1.5em;
            font-weight: 400;
            color: var(--bodyTextColor);
            display: block;
        }

        .cs-h3 {
            font-size: 1.25rem;
            line-height: 1.2em;
            font-weight: 700;
            margin: 0;
            color: var(--headerColor);
            transition: color 0.3s;
        }

        .cs-desc {
            font-size: 0.875rem;
            line-height: 1.5em;
            margin: 0;
            color: var(--bodyTextColor);
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .cs-link {
            font-size: 0.875rem;
            line-height: 1.5em;
            font-weight: 700;
            margin-top: 0.5rem;
            color: var(--headerColor);
            transition: color 0.3s;
            display: block;
        }
    }
}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
    #gallery-2371 {
        .cs-image-group {
            display: flex;
            flex-wrap: wrap;
            gap: 1.25rem;
        }
        
        .cs-item {  
            width: calc(50% - 0.625rem);
            
            .cs-image {
                height: 15rem;
            }
        }
    }
}

/* Desktop - 1024px */
@media only screen and (min-width: 64rem) {
    #gallery-2371 {
        .cs-content {
            text-align: left;
            align-items: flex-start;
        }

        .cs-image-group {
            display: flex;
            flex-wrap: wrap;
            gap: 1.25rem;
        }
        
        .cs-item {
            width: calc(33.333% - 0.85rem);
            
            .cs-image {
                height: 15rem;
            }
            
            &:nth-of-type(3) {
                .cs-image {
                    height: 15rem;
                }
            }
            
            &:nth-of-type(4) {
                .cs-image {
                    height: 15rem;
                }
            }
        }
    }
}

/* Dark Mode */
@media only screen and (min-width: 0rem) {
    body.dark-mode {
        #gallery-2371 {
            .cs-item {
                .cs-info {
                    background-color: rgba(0, 0, 0, 0.3);
                }
                
                .cs-h3,
                .cs-link {
                    color: var(--bodyTextColorWhite);
                }
                
                .cs-date,
                .cs-desc {
                    color: var(--bodyTextColorWhite);
                    opacity: 0.8;
                }
                
                &:hover {
                    .cs-link {
                        color: var(--primary);
                    }
                }
            }
        }
    }
}
</style>
