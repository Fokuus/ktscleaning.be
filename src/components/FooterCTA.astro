---

import PhoneCTASimple from "@components/PhoneCTASimple.astro";
import Button from "@components/Button.astro";
---

<div class="footer-cta-float">
  <div class="cs-container">
    <section class="footer-cta">
      <div class="footer-cta__content">
        <span class="footer-cta__text">Bel ons of krijg vrijblijvend een offerte.</span>
        <div class="cs-button-group">
          <PhoneCTASimple />
          <p>of</p>
          <Button text="Offerte Aanvragen" href="/contact" />


          
      </div>
    </section>
  </div>
</div>

<style lang="less">
.footer-cta-float {
  width: 100%;
  display: flex;
  justify-content: center;
  position: relative;
  z-index: 20;
  margin-bottom: 60px;
  pointer-events: none;
  border-radius: 1.25rem;


  .cs-container {
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    box-sizing: border-box;
    
  }

  .footer-cta {
    width: 100%;
    background: var(--primaryLight);
    border-radius: 1.25rem; // 20px
    box-shadow: 0 8px 32px 0 rgba(0,0,0,0.10);
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: auto;
    border: 2px solid var(--primary);

    .footer-cta__content {
      width: 100%;
      min-height: 110px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 3rem;

      .footer-cta__text {
        color: var(--bodyText);
        font-size: var(--bodyFontSizeBigger);
        font-weight: normal;
        letter-spacing: 0.01em;
        line-height: 1.2;
        text-shadow: 0 1px 2px rgba(0,0,0,0.08);
      }
      
      .footer-cta__button {
        background: var(--bodyTextColorWhite);
        color: var(--primary);
        font-weight: 700;
        font-size: 1.15rem;
        border: none;
        border-radius: 0.4375rem; // 7px
        padding: 1.1rem 2.8rem;
        text-decoration: none;
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        transition: background 0.2s, color 0.2s;
        display: inline-block;
        text-align: center;
        /* cut out top‐left & bottom‐right 30px triangles */
        -webkit-clip-path: polygon(
            30px 0,          /* start 30px in along top edge */
            100% 0,          /* top‐right corner */
            100% calc(100% - 30px), /* down right edge, 30px above bottom */
            calc(100% - 30px) 100%, /* 30px left of bottom‐right corner */
            0 100%,          /* bottom‐left corner */
            0 30px           /* up left edge, 30px below top */
        );
        clip-path: polygon(
            30px 0,
            100% 0,
            100% calc(100% - 30px),
            calc(100% - 30px) 100%,
            0 100%,
            0 30px
        );
        overflow: hidden;
        
        &:hover {
          background: #ffe066;
          color: var(--bodyTextColorWhite);
        }
      }
    }

    .cs-button-group {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 1rem;
    }
  }

  @media (max-width: 900px) {
    .footer-cta__content {
      flex-direction: column;
      gap: 1.5rem;
      padding: 2rem 1rem;
      min-height: unset;
      justify-content: center;
      align-items: center;
      .footer-cta__text {
        font-size: 1.3rem;
        text-align: center;
      }
    }
  }
  @media (max-width: 600px) {
    .footer-cta {
      border-radius: 0.75rem; // 12px
      .footer-cta__content {
        padding: 1.2rem 0.5rem;
        .footer-cta__text {
          font-size: 1.05rem;
        }
        .footer-cta__button {
          font-size: 1rem;
          padding: 0.8rem 1.5rem;
        }
      }
    }
  }
}
</style> 