---

import PhoneCTASimple from "@components/PhoneCTASimple.astro";
import Button from "@components/Button.astro";
---

<div class="footer-cta-float">
  <div class="cs-container">
    <section class="footer-cta wow animate__fadeInUp" data-wow-delay="0.2s">
      <div class="footer-cta__content">
        <span class="footer-cta__text">Bel ons of krijg vrijblijvend een offerte.</span>
        <div class="cs-button-group">
          <PhoneCTASimple />
          <p>of</p>
          <Button text="Offerte Aanvragen" href="/contact" />


          
      </div>
    </section>
  </div>
</div>

<style lang="less">
.footer-cta-float {
  width: 100%;
  display: flex;
  justify-content: center;
  position: relative;
  z-index: 20;
  margin-bottom: 60px;
  pointer-events: none;


  .cs-container {
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    box-sizing: border-box;
  }

  .footer-cta {
    width: 100%;
    background: var(--primaryLight);
    box-shadow: 0 8px 32px 0 rgba(0,0,0,0.10);
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: auto;
    border: 2px solid var(--primary);

          .footer-cta__content {
        width: 100%;
        min-height: 110px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: clamp(1rem, 3vw, 2rem) clamp(1rem, 4vw, 3rem);

              .footer-cta__text {
          color: var(--bodyText);
          font-size: clamp(1.1rem, 3vw, 1.5rem);
          font-weight: normal;
          letter-spacing: 0.01em;
          line-height: 1.2;
          text-shadow: 0 1px 2px rgba(0,0,0,0.08);
          flex-shrink: 1;

        }
      
      .footer-cta__button {
        background: var(--bodyTextColorWhite);
        color: var(--primary);
        font-weight: 700;
        font-size: 1.15rem;
        border: none;
        padding: 1.1rem 2.8rem;
        text-decoration: none;
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        transition: background 0.2s, color 0.2s;
        display: inline-block;
        text-align: center;
        /* cut out top‐left & bottom‐right 30px triangles */
        -webkit-clip-path: polygon(
            30px 0,          /* start 30px in along top edge */
            100% 0,          /* top‐right corner */
            100% calc(100% - 30px), /* down right edge, 30px above bottom */
            calc(100% - 30px) 100%, /* 30px left of bottom‐right corner */
            0 100%,          /* bottom‐left corner */
            0 30px           /* up left edge, 30px below top */
        );
        clip-path: polygon(
            30px 0,
            100% 0,
            100% calc(100% - 30px),
            calc(100% - 30px) 100%,
            0 100%,
            0 30px
        );
        overflow: hidden;
        
        &:hover {
          background: #ffe066;
          color: var(--bodyTextColorWhite);
        }
      }
    }

          .cs-button-group {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
        gap: clamp(0.5rem, 2vw, 1rem);
        flex-shrink: 0;
        flex-wrap: wrap;
        flex-grow: 1
      }
  }

      /* Desktop breakpoint */
    @media (min-width: 768px) {
      .cs-container {
        padding-left: 3rem;
        padding-right: 3rem;
      }
    }

      /* Tablet breakpoint */
    @media (max-width: 900px) {
      .footer-cta__content {
        flex-direction: column;
        gap: 1.5rem;
        padding: clamp(1.5rem, 4vw, 2rem) clamp(1rem, 3vw, 1.5rem);
        min-height: unset;
        justify-content: center;
        align-items: center;
        text-align: center;
        
        .footer-cta__text {
          margin-right: 0;
          text-align: center;
        }
      }
    }
    
    /* Mobile breakpoint */
    @media (max-width: 600px) {
      .footer-cta {
        margin-bottom: clamp(30px, 8vw, 60px);
        
        .footer-cta__content {
          padding: clamp(1rem, 4vw, 1.5rem) clamp(0.75rem, 3vw, 1rem);
          
          .footer-cta__text {
            font-size: clamp(1.5rem, 4vw, 1.75rem);
            text-align: center;
            padding: 0 1rem;
          }
          
          .cs-button-group {
            flex-direction: column;
            gap: clamp(0.5rem, 1.5vw, 0.75rem);
            
            p {
              font-size: clamp(0.875rem, 2.5vw, 1rem);
            }
          }
        }
      }
    }
    
    /* Very small mobile */
    @media (max-width: 380px) {
      .cs-container {
        padding-left: 0.75rem;
        padding-right: 0.75rem;
      }
      
      .footer-cta {
        .footer-cta__content {
          padding: 1rem 0.5rem;
          
          .cs-button-group {
            flex-direction: column;
            gap: 0.75rem;
            width: 100%;
            
            p {
              order: -1;
            }
          }
        }
      }
    }
}
</style> 