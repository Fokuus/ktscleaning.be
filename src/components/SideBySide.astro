---
import Button from "@components/Button.astro";

interface Props {
  // Content
  topper?: string;
  title: string;
  text: string;
  projectTitle?: string;
  projectItems: string[];
  buttonText?: string;
  buttonHref?: string;
  
  // Images
  beforeImage: string;
  afterImage: string;
  beforeAlt?: string;
  afterAlt?: string;
  
  // Stats box (optional)
  showStats?: boolean;
  statsNumber?: string;
  statsText?: string;
  
  // Layout
  id?: string;
}

const {
  topper = "VOOR & NA",
  title,
  text,
  projectTitle = "Dit project:",
  projectItems,
  buttonText = "Offerte aanvragen",
  buttonHref = "/contact",
  beforeImage,
  afterImage,
  beforeAlt = "Voor reiniging",
  afterAlt = "Na reiniging", 
  showStats = true,
  statsNumber = "13+",
  statsText = "Jaar ervaring",
  id = "sbs-2295"
} = Astro.props;
---

<!-- ============================================ -->
<!--                  Side By Side                -->
<!-- ============================================ -->

<section id={id}>
    <div class="cs-container">
        <div class="cs-image-group wow animate__fadeInRight" data-wow-delay="0.2s">
            <div class="cs-picture-wrapper1">
                <picture class="cs-picture">
                    <source media="(max-width: 600px)" srcset={beforeImage}>
                    <source media="(min-width: 601px)" srcset={beforeImage}>
                    <img loading="lazy" decoding="async" src={beforeImage} alt={beforeAlt} width="629" height="789">
                </picture>
            </div>
            <div class="cs-picture-wrapper2">
                <picture class="cs-picture">
                    <source media="(max-width: 600px)" srcset={afterImage}>
                    <source media="(min-width: 601px)" srcset={afterImage}>
                    <img loading="lazy" decoding="async" src={afterImage} alt={afterAlt} width="629" height="789">
                </picture>
            </div>
            <svg class="cs-arrow" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 134.97 84.97">
                <path fill="currentColor" fill-rule="evenodd" d="M75.51 16.97L89.03 30.49H0v24h89.03l-13.52 13.51L92.49 84.97 134.97 42.49 92.49 0 75.51 16.97z"/>
            </svg>
            {showStats && (statsNumber && statsText) && (
                <div class="cs-box">
                    <span class="cs-number">{statsNumber}</span>
                    <span class="cs-tag">{statsText}</span>
                </div>
            )}
        </div>
        <div class="cs-content wow animate__fadeInLeft">
            <span class="cs-topper">{topper}</span>
            <h2 class="cs-title">{title}</h2>
            <p class="cs-text">{text}</p>
            <h3 class="cs-h3">{projectTitle}</h3>
            <ul class="cs-ul">
                {projectItems && projectItems.map((item) => (
                    <li class="cs-li" set:html={item}></li>
                ))}
            </ul>
            {(buttonText && buttonHref) && (
                <Button text={buttonText} href={buttonHref} />
            )}
        </div>
    </div>
</section>

<style>
    /*-- -------------------------- -->
    <---        Side By Side        -->
    <--- -------------------------- -*/
    
    /* Mobile - 360px */
    @media only screen and (min-width: 0rem) {
      [id^="sbs-"] {
        padding: var(--sectionPadding);
        background-color: #f7f7f7;
        overflow: hidden;
        position: relative;
        z-index: 1;
      }
      [id^="sbs-"] .cs-container {
        width: var(--contentWidthMobile);
        max-width: var(--contentWidthDesktopMax);
        margin: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        /* 48px - 64px */
        gap: clamp(3rem, 4vw, 4rem);
      }
      [id^="sbs-"] .cs-image-group {
        /* scales the whole section down and ties the font size to the vw and stops at 75% of the vale of 1em, changes at desktop */
        font-size: min(1.98vw, .826rem);
        /* everything inside this box is in ems so we can scale it all down proportionally with a font size */
        width: 46.125em;
        height: 36.125em;
        order: -1;
        position: relative;
        z-index: 1;
        /* prevents flexbox from squishing it */
        flex: none;
      }
      [id^="sbs-"] .cs-picture {
        width: 100%;
        height: 100%;
        border: 1em solid #f7f7f7;
        display: block;
      }
      [id^="sbs-"] .cs-picture img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        top: 0;
        left: 0;
      }
      [id^="sbs-"] .cs-picture-wrapper1 {
        width: 25.75em;
        height: 28.5625em;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        position: absolute;
        top: 0;
        left: 0;
      }
      [id^="sbs-"] .cs-picture-wrapper2 {
        width: 25.8125em;
        height: 29.625em;
        display: flex;
        flex-direction: column-reverse;
        gap: 1rem;
        position: absolute;
        right: 0;
        bottom: 0;
      }
      [id^="sbs-"] .cs-tag {
        /* 14px - 24px */
        font-size: clamp(0.875rem, 1.4vw, 1.5rem);
        line-height: 1.2em;
        text-align: center;
        color: #fff;
        font-weight: 400;
      }
      [id^="sbs-"] .cs-arrow {
        width: 7em;
        height: 4.5em;
        position: absolute;
        top: 12em;
        left: 17.5em;
        transform: rotate(30deg);
        color: var(--primary);
        fill: var(--primary);
        fill-opacity: 1;
        stroke: none;
      }
      [id^="sbs-"] .cs-box {
        padding: 1em 1.5em;
        background-color: var(--primary);
        border-radius: 0;
        position: absolute;
        bottom: 2em;
        right: 2em;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25em;
      }
      [id^="sbs-"] .cs-number {
        font-size: 2rem;
        font-weight: 900;
        line-height: 1em;
        color: #fff;
        display: block;
      }
      [id^="sbs-"] .cs-content {
        /* set text align to center if content needs to be centrally aligned */
        text-align: left;
        width: 100%;
        max-width: 36.625rem;
        display: flex;
        flex-direction: column;
        /* aligns content to the left, set to center to centrally align */
        align-items: flex-start;
      }
      [id^="sbs-"] .cs-title {
        max-width: none;
        margin: 0;
      }
      [id^="sbs-"] .cs-text {
        margin-bottom: 1rem;
      }
      [id^="sbs-"] .cs-text:last-of-type {
        margin-bottom: 1.5rem;
      }
      [id^="sbs-"] .cs-button-solid {
        font-size: 1rem;
        /* 46px - 56px */
        line-height: clamp(2.875rem, 5.5vw, 3.5rem);
        text-align: center;
        text-decoration: none;
        min-width: 9.375rem;
        margin: 0;
        padding: 0 1.5rem;
        background-color: var(--primary);
        color: var(--headerColor);
        display: inline-block;
        position: relative;
        z-index: 1;
      }
      [id^="sbs-"] .cs-button-solid:before {
        content: "";
        width: 0%;
        height: 100%;
        background: var(--primary);
        opacity: 1;
        border-radius: 0;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
        transition: width 0.3s;
      }
      [id^="sbs-"] .cs-button-solid:hover:before {
        width: 100%;
      }
      [id^="sbs-"] .cs-h3 {
        font-size: 1rem;
        line-height: 1.5em;
        margin: 0;
        color: var(--headerColor);
      }
      [id^="sbs-"] .cs-ul {
        margin: 0.75rem 0 2rem;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }
      [id^="sbs-"] .cs-li {
        font-size: 1rem;
        line-height: 1.5em;
        list-style: none;
        /* 20px - 24px */
        padding-left: clamp(1.25rem, 3vw, 1.5rem);
        color: var(--bodyTextColor);
        position: relative;
      }
      [id^="sbs-"] .cs-li :global(strong) {
        color: #1a1a1a;
        font-weight: 600 !important;
        margin: 0 !important;
        padding: 0 !important;
        margin-right: 0.1rem !important;
        line-height: inherit !important;
        display: inline !important;
      }
      [id^="sbs-"] .cs-li::before {
        content: "";
        width: 0.5rem;
        height: 0.5rem;
        margin-top: 0.5rem;
        background-color: var(--primary);
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        transform: rotate(45deg);
      }
    }
    /* Tablet - 768px */
    @media only screen and (min-width: 48rem) and (max-width: 63.9375rem) {
      [id^="sbs-"] .cs-container {
        width: 90%;
        max-width: 900px;
        margin: auto;
        gap: clamp(3rem, 5vw, 4rem);
        padding: 0 1rem;
      }
      [id^="sbs-"] .cs-image-group {
        order: initial;
        font-size: min(2.5vw, 0.9rem);
        width: 85%;
        max-width: 550px;
        margin: 0 auto;
      }
      [id^="sbs-"] .cs-content {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
        align-items: center;
        padding: 0 1rem;
      }
      [id^="sbs-"] .cs-title {
        font-size: clamp(1.75rem, 4vw, 2.25rem);
        margin-bottom: 1rem;
      }
      [id^="sbs-"] .cs-text {
        font-size: clamp(0.9rem, 2.5vw, 1.1rem);
        margin-bottom: 1.25rem;
      }
      [id^="sbs-"] .cs-h3 {
        font-size: clamp(1rem, 2.5vw, 1.2rem);
        margin-bottom: 1rem;
      }
    }
    /* Desktop - 1024px */
    @media only screen and (min-width: 64rem) {
      [id^="sbs-"] .cs-container {
        width: var(--contentWidthDesktop);
        max-width: var(--contentWidthDesktopMax);
        margin: auto;
        flex-direction: row;
        align-items: stretch;
        gap: clamp(4rem, 6vw, 6rem);
        padding: 0;
      }
      [id^="sbs-"] .cs-image-group {
        font-size: min(1.03vw, 1rem);
        height: auto;
        width: 46.125em;
        margin: 0;
      }
      [id^="sbs-"] .cs-content {
        text-align: left;
        align-items: flex-start;
        margin: 0;
        padding: 0;
        max-width: none;
      }
      [id^="sbs-"] .cs-title {
        font-size: var(--headerFontSize);
        margin-bottom: calc(16rem / 16);
      }
      [id^="sbs-"] .cs-text {
        font-size: var(--bodyFontSize);
        margin-bottom: 1rem;
      }
      [id^="sbs-"] .cs-h3 {
        font-size: 1rem;
        margin-bottom: 0;
      }
      [id^="sbs-"] .cs-picture-wrapper1 {
        height: auto;
        bottom: 7.5625em;
      }
      [id^="sbs-"] .cs-picture-wrapper2 {
        height: auto;
        top: 6.5em;
      }
    }
    </style>